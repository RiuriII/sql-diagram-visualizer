{
  "name": "sql-visualizer",
  "displayName": "SQL Visualizer",
  "description": "Convert SQL files into SVG diagrams.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sql",
    "svg",
    "diagram",
    "visualizer",
    "extension"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.convertToDiagram",
        "title": "Convert SQL to Diagram"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.convertToDiagram",
          "when": "resourceLangId == sql",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "jest --runInBand"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  }
}
